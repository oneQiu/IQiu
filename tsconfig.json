{
  "compilerOptions": {
    "watch": true,
    "jsx": "react",
    "target": "ES5",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "@redux/*": ["./src/redux/*"],
      "@pages/*": ["./src/pages/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
    }
  },
  "include": ["./src"]
}